@model List<PCGamesPartials.Models.PCGame>
@{
    ViewData["Title"] = "PC Games";
}

<h1 class="text-center my-4">PC Games Library ALL</h1>

<div class="container">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
        @foreach (var game in Model)
        {
            <div class="col">
                <div class="card h-100 border-0 rounded-4 overflow-hidden">
                    <img src="@game.ImageUrl" class="card-img-top object-fit-cover" style="height: 440px;" alt="@game.Title">
                    <div class="card-body">
                        <h4>@game.Title</h4>
                        <p>@game.Genre</p>
                        <p>@game.Description</p>
                        <strong>@game.Price kr</strong>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

